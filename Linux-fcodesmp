*for samba*
yum install samba samba-client samba-common
cd /etc/samba
vi smb.conf
---- add WORKGROUP
useradd sam
passwd sam

mkdir /fac
chmod 777 /fac
chown sam:sam /fac

firewall-cmd --add-service={samba,samba-client} --permanent

syst start smb
            nmb

setenforce
smbpasswd -a sam
