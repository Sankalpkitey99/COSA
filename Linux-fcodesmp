*for Dns*
yum install bind bind-utils -y
vi etcnamed.conf
-- add ip 
---- any
--- zone 
--- master
---- ip
cd /var/named
remove @

sys start named
file permissiion 
chown named demo.lab.zone

vi /etc/resolve.conf
nameserver -ip
---- for pc 2---
open firewall for dns

and add ip of ser
vi /etc/resolv.conf
nameserver - ip



cp named.localhost demo.lab.zone
vi demo .lab .zone


*for samba*
yum install samba samba-client samba-common
cd /etc/samba
vi smb.conf
---- add WORKGROUP
useradd sam
passwd sam

mkdir /fac
chmod 777 /fac
chown sam:sam /fac

firewall-cmd --add-service={samba,samba-client} --permanent

syst start smb
            nmb

setenforce
smbpasswd -a sam
